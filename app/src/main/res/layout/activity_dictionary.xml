<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.DictionaryActivity"
    android:background="@color/green_dark">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ điển"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/edtSearchDict"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvName"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_background"
        android:drawableLeft="@drawable/baseline_search_black_24"
        android:paddingLeft="20dp"
        android:hint="Nhập từ cần tìm..."
        android:maxLines="1"
        android:inputType="text"
        />


    <TextView
        android:id="@+id/tvTypewordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/edtSearchDict"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="80sp"
        android:text="Loại từ"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTypeWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvTypewordTitle"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="40sp"
        android:text="..."
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDefineTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvTypewordTitle"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10sp"
        android:text="Định nghĩa"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/tvDefine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvDefineTitle"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20sp"
        android:text="..."
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>